<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--    declare dimension for card-->
    <dimen name="home_card_height">20dp</dimen>
    <dimen name="home_card_width">20dp</dimen>
    <dimen name="home_card_text_size">20sp</dimen>

    <!--    declare colors for card-->
    <color name="card_color">#FFFFFF85</color>

    <!--    declare ids for card-->
    <item name="card_container_id" type="id"/>

    <integer name="max_count">75</integer>

    <bool name="card_visibility">true</bool>

    <!-- declare array using integer for card colors  -->
    <integer-array name="card_colors">
        <item>@color/black</item>
        <item>@color/purple_200</item>
        <item>@color/cardview_dark_background</item>
        <item>@color/design_default_color_secondary_variant</item>
    </integer-array>

    <!-- declare array using string for city dropdown  -->

    <string-array name="city_dropdown">
        <item>keshod</item>
        <item>Surat</item>
        <item>Rajkot</item>
        <item>Junagadh</item>
    </string-array>

    <array name="icons">
        <item>@drawable/ic_logo</item>
        <item>@drawable/ic_user_pick</item>
    </array>

    <array name="icon_colors">
        <item>@color/purple_200</item>
        <item>@color/black</item>
    </array>


</resources>